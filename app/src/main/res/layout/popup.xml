<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="327dp"
    android:layout_height="388dp"
    app:circularflow_radiusInDP="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_popup">

<ImageView
    android:id="@+id/iv_conf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/confirmation"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="12dp"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointemnt Confirmed"
        android:textSize="18sp"
        android:textColor="#343434"
        android:fontFamily="@font/inter"
        android:layout_marginRight="29.5dp"
        android:layout_marginLeft="29.5dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/iv_conf"/>
    <TextView
        android:id="@+id/tv_sometxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet "
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter"
        android:layout_marginRight="29.5dp"
        android:layout_marginLeft="29.5dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_below="@id/tv_status"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10.02.2023 at 10:00"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter"
        android:layout_marginRight="29.5dp"
        android:layout_marginLeft="29.5dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_below="@id/tv_sometxt"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locstion"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toLeftOf="@id/tv_location"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="29.5dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_location"
            android:text="Lorem ipsum dolor sit amet "
            android:textColor="#000000"
            android:textSize="18sp"

            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btnd_gradient"
        android:text="Back To Home"
        android:textColor="#ffff"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/cl_location"/>
</RelativeLayout>